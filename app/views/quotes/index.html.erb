
<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div data-controller="pwa-installer" class="mb-2">
    <div data-pwa-installer-target="installPrompt" class="hidden">
      <div class="flex max-sm:flex-col items-center justify-center bg-blue-500 text-white px-2 py-3.5 rounded">
        <p class="text-base">Add to your home screen this amazing app on your device!</p>
        <div class="max-sm:mt-4 sm:ml-6 flex gap-4">
          <button data-action="click->pwa-installer#onInstall" type="button" class="bg-white text-blue-500 font-semibold py-2 px-4 rounded text-sm hover:bg-slate-100">
            Install
          </button>
          <button data-action="pwa-installer#hidePrompt" type="button" class="bg-white text-blue-500 font-semibold py-2 px-4 rounded text-sm hover:bg-slate-100">
            Don't Show Again
          </button>
        </div>
      </div>
    </div>

    <div data-pwa-installer-target="manualPrompt" class="hidden">
      <div class="flex max-sm:flex-col items-center justify-center bg-blue-500 text-white px-2 py-3.5 rounded">
        <div class="flex flex-wrap justify-center">
          <div class="inline-flex">
            Just tap
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-box-arrow-up px-1" viewBox="0 0 16 16">
              <path fill-rule="evenodd" d="M3.5 6a.5.5 0 0 0-.5.5v8a.5.5 0 0 0 .5.5h9a.5.5 0 0 0 .5-.5v-8a.5.5 0 0 0-.5-.5h-2a.5.5 0 0 1 0-1h2A1.5 1.5 0 0 1 14 6.5v8a1.5 1.5 0 0 1-1.5 1.5h-9A1.5 1.5 0 0 1 2 14.5v-8A1.5 1.5 0 0 1 3.5 5h2a.5.5 0 0 1 0 1h-2z"/>
              <path fill-rule="evenodd" d="M7.646.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1-.708.708L8.5 1.707V10.5a.5.5 0 0 1-1 0V1.707L5.354 3.854a.5.5 0 1 1-.708-.708l3-3z"/>
            </svg>
          </div>
          <div class="inline-flex">
            and scroll to "Add to Home Screen"
            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-square-plus px-1" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
              <path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M9 12h6" />
              <path d="M12 9v6" /><path d="M3 5a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v14a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-14z" />
            </svg>
          </div>
        </div>
        <div class="max-sm:mt-4 sm:ml-6 flex gap-4">
          <button data-action="pwa-installer#hidePrompt" type="button" class="bg-white text-blue-500 font-semibold py-2 px-4 rounded text-sm hover:bg-slate-100">
            Don't Show Again
          </button>
        </div>
      </div>
    </div>
  </div>


  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Quotes</h1>
    <%# <div class="bg-blue-600 rounded-md h-6 w-20 m-2" data-controller="online-check">Hello</div> %>
    <%= link_to "New quote", new_quote_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="quotes" class="min-w-full">
    <%= render @quotes %>
  </div>
</div>
